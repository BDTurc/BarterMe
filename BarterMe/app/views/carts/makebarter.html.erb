<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h2>Please select items to trade for</h2>
<% @cart = Cart.find(params[:id])%>

<%= form_tag(new_offer_path, method: "post") do %>

<div class="row">
  <p style="right:80px"></p>
  <ul>
    <table class="table table-striped">

      <% if @cart.line_items.empty? %>
      <%= "Add items to your watchlist to make a barter!" %>
      <%else %>

      <% @cart.line_items.each do |item| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td class="form-group">
         <%= check_box_tag 'item1_ids[]', item.item.id %>
         <td>
          <%= image_tag(item.item.image_url) %>
        </td>
        <td class="list_description">
          <dl>
            <dt><%= link_to item.item.name, item_path(item.item) %> &times; <%= item.quantity %></dt>
            <dd><%= truncate(strip_tags(item.item.description), length: 80) %></dd>
          </dl>
        </td>
      </td>
    </tr>
    <% end %> 
    <% end %>
  </table>
</ul>
</div>

<h2>Please select items to offer in the trade</h2>
<div class="row">
  <p style="right:80px"></p>
  <ul>
    <table class="table table-striped">
      <%  user = User.find_by(id: session[:user_id])
      @items = Item.mine? user %>
      <% @items.each do |item| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td class="form-group">
         <%= check_box_tag 'item2_ids[]', item.id %>
         <td>
          <%= image_tag(item.image_url) %>
        </td>
        <td class="list_description">
          <dl>
            <dt><%= link_to item.name, item_path(item) %></dt>
            <dd><%= truncate(strip_tags(item.description), length: 80) %></dd>
          </dl>
        </td>
      </td>
    </tr>
    <% end %>
  </table>
</ul>
</div>

<%= button_tag(type: 'submit', class: "btn btn-large pull-right btn-primary") do %>
 <i class="icon icon-search"></i> Make this Barter
<% end %>
<% end %>



